<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="mapPane" prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MapController">
   <children>
      <AnchorPane fx:id="currentPlayerPane" layoutX="1090.0" layoutY="10.0" prefHeight="640.0" prefWidth="100.0" style="-fx-border-color: black;">
         <children>
            <Label alignment="CENTER" prefHeight="30.0" prefWidth="100.0" text="Current Player" />
            <Label fx:id="currentPlayerLabel" alignment="CENTER" layoutY="30.0" prefHeight="30.0" prefWidth="100.0" text="Player_99" />
            <Label alignment="CENTER" layoutY="90.0" prefHeight="30.0" prefWidth="100.0" text="Arimes in hand" />
            <Label fx:id="armiesInHandLabel" alignment="CENTER" layoutY="120.0" prefHeight="30.0" prefWidth="100.0" text="99" />
            <Label fx:id="reinforceFromLabel" alignment="CENTER" layoutY="180.0" prefHeight="30.0" prefWidth="100.0" text="Reinforce From" />
            <Label fx:id="reinforceFromCountryLabel" alignment="CENTER" layoutY="210.0" prefHeight="30.0" prefWidth="100.0" text="Country_99" />
            <Label fx:id="reinforceToLabel" alignment="CENTER" layoutY="270.0" prefHeight="30.0" prefWidth="100.0" text="Reinforce To" />
            <Label fx:id="reinforceToCountryLabel" alignment="CENTER" layoutY="300.0" prefHeight="30.0" prefWidth="100.0" text="Country_99" />
         </children>
      </AnchorPane>
      <Button fx:id="saveEditedMapButton" layoutX="10.0" layoutY="50.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="50.0" text="Save" />
      <Button fx:id="backToMenuButton" layoutX="160.0" layoutY="50.0" mnemonicParsing="false" onAction="#backToMenu" prefHeight="30.0" prefWidth="50.0" text="Quit" />
      <Label fx:id="phaseLabel" alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="30.0" prefWidth="200.0" style="-fx-border-color: black;" text="Current Phase" />
      <Button layoutX="1090.0" layoutY="660.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="Next" />
   </children>
</AnchorPane>
